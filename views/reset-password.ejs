<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Online Textbooks - Reset Password</title>

    <!-- Custom fonts for this template-->
    <link
      href="/public/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="/public/css/online-textbooks.css" rel="stylesheet" />
  </head>

  <body class="bg-gradient-primary">
    <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                <div class="col-lg-6 d-none d-lg-block bg-reset-image"></div>
                <div class="col-lg-6">
                  <div class="p-4 p-sm-5">
                    <div class="text-center mb-4">
                      <a
                        class="d-flex align-items-center justify-content-center text-decoration-none"
                        href="/users/forgot-password"
                      >
                        <div class="fas-login">
                          <i class="fas fa-book-reader text-primary"></i>
                        </div>
                        <div class="text-primary font-weight-bold mx-2">
                          online textbooks
                        </div>
                      </a>
                    </div>
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-2">
                        Reset Password
                      </h1>
                      <p class="mb-4">
                        Please reset your password!
                      </p>
                    </div>
                    <% if(locals.messages) { %> <% if (messages.error) {%>
                    <div class="alert alert-danger py-2" role="alert">
                      <%=messages.error%>
                    </div>
                    <% }%> <% if (messages.success) {%>
                    <div class="alert alert-success py-2" role="alert">
                      <%=messages.success%>
                    </div>
                    <% }%> <% } %>
                    <form
                      class="user"
                      method="POST"
                      action="/users/reset-password"
                    >
                      <div class="form-group">
                        <input
                          type="password"
                          class="form-control form-control-user"
                          id="exampleRegisterPassword"
                          name="password"
                          placeholder="New Password"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="password"
                          class="form-control form-control-user"
                          id="exampleInputPassword"
                          name="confirmpassword"
                          placeholder="Confirm Password"
                          required
                        />
                      </div>
                      <div class="text-center">
                        <input
                          type="submit"
                          class="btn btn-primary btn-user"
                          value="Update"
                        />
                      </div>
                    </form>
                    <hr />
                    <div class="text-center">
                      <a class="text-primary small" href="/users/login"
                        >Maybe a mistake? Back to Login!</a
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/public/vendor/jquery/jquery.min.js"></script>
    <script src="/public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/public/js/online-textbooks.js"></script>
  </body>
</html>
