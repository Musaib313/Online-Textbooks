<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Online Textbooks - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link
      href="/public/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <!-- Custom styles for this template-->
    <link href="/public/css/online-textbooks.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <ul
        class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion"
        id="accordionSidebar"
      >
        <!-- Logo -->
        <a
          class="sidebar-brand d-flex align-items-center justify-content-center"
          href="/"
        >
          <div class="sidebar-brand-icon">
            <i class="fas fa-book-reader"></i>
          </div>
          <div class="sidebar-brand-text mx-2">Online Textbooks</div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0" />

        <!-- Nav Item - Dashboard -->
        <li class="nav-item active">
          <a class="nav-link" href="/">
            <i class="fas fa-fw fa-chalkboard-teacher"></i>
            <span>Dashboard</span></a
          >
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider" />

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
          <a
            class="nav-link collapsed"
            href="#"
            data-toggle="collapse"
            data-target="#collapseTwo"
            aria-expanded="true"
            aria-controls="collapseTwo"
          >
            <i class="fas fa-fw fa-book"></i>
            <span>Browse books</span>
          </a>
          <div
            id="collapseTwo"
            class="collapse"
            aria-labelledby="headingTwo"
            data-parent="#accordionSidebar"
          >
            <div class="bg-white py-2 collapse-inner rounded">
              <a class="collapse-item" href="/branch"
                ><i class="fas fa-fw fa-archive"></i> <span>Branch</span></a
              >
              <a class="collapse-item" href="/semester"
                ><i class="fas fa-fw fa-server"></i> <span>Semester</span></a
              >
              <a class="collapse-item" href="/author"
                ><i class="fas fa-fw fa-edit"></i> <span>Author</span></a
              >
            </div>
          </div>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/download-books">
            <i class="fas fa-fw fa-download"></i>
            <span>Download books</span>
          </a>
        </li>
        <!-- Divider -->
        <hr class="sidebar-divider" />

        <!-- Heading -->
        <div class="sidebar-heading">
          Other
        </div>

        <!-- Nav item - Request a book -->
        <li class="nav-item">
          <a class="nav-link" href="#request">
            <i class="fas fa-fw fa-comment"></i>
            <span>Request a book</span></a
          >
        </li>

        <!-- Nav Item - About Us -->
        <li class="nav-item">
          <a class="nav-link" href="#about">
            <i class="fas fa-fw fa-address-card"></i>
            <span>About Us</span></a
          >
        </li>

        <!--Nav Item- Contact-->
        <li class="nav-item">
          <a class="nav-link" href="#contactus">
            <i class="fas fa-fw fa-address-book"></i>
            <span>Contact</span>
          </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block" />

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
          <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
      </ul>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <nav
            class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"
          >
            <!-- Sidebar Toggle (Topbar) -->
            <button
              id="sidebarToggleTop"
              class="btn btn-link d-md-none rounded-circle mr-3"
            >
              <i class="fa fa-bars"></i>
            </button>

            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">
              <!-- Nav Item - Alerts -->
              <li class="nav-item dropdown no-arrow mx-2">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="alertsDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-bell fa-fw"></i>
                  <!-- Counter - Alerts -->
                  <span class="badge badge-warning badge-counter">1+</span>
                </a>
                <!-- Dropdown - Alerts -->
                <div
                  class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                  aria-labelledby="alertsDropdown"
                >
                  <h6 class="dropdown-header bg-primary border-primary">
                    Alerts Center
                  </h6>
                  <a class="dropdown-item d-flex align-items-center" href="#">
                    <div class="mr-3">
                      <div class="icon-circle bg-primary">
                        <i class="fas fa-file-alt text-white"></i>
                      </div>
                    </div>
                    <div>
                      <div class="small text-gray-500">March 22, 2020</div>
                      <span class="font-weight-bold"
                        >The book requested has been uploaded!</span
                      >
                    </div>
                  </a>
                </div>
              </li>

              <!-- Nav Item - User Information -->
              <li class="nav-item dropdown no-arrow">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="userDropdown"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-user fa-2x"></i>
                </a>
                <!-- Dropdown - User Information -->
                <div
                  class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                  aria-labelledby="userDropdown"
                >
                  <a class="dropdown-item" href="/">
                    <h6><%= login.usn %></h6>
                    <p><%= login.firstname%> <%= login.lastname %></p>
                  </a>

                  <div class="dropdown-divider"></div>
                  <a
                    class="dropdown-item"
                    href="#"
                    data-toggle="modal"
                    data-target="#logoutModal"
                  >
                    <i
                      class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"
                    ></i>
                    Logout
                  </a>
                </div>
              </li>
            </ul>
          </nav>
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div id="pgContainer" class="container-fluid">
            <!-- Page Heading -->
            <div
              class="d-sm-flex align-items-center justify-content-between mb-4"
            >
              <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            </div>

            <!--latest added books-->
            <div class="row">
              <div class="col-lg-12 col-lg-9 mb-4">
                <div id="contact" class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                      Recently Added
                    </h6>
                  </div>
                  <div
                    id="recentAdded"
                    class="card-body py-4 overflow-auto latest-card-body"
                  >
                    <%-include('partials/searchResults') %>
                  </div>
                </div>
              </div>
            </div>
            <!-- Content Row -->
            <div class="row">
              <!-- Request a book -->
              <div class="col-md-6 mb-4">
                <div id="request" class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                      Request a book
                    </h6>
                  </div>
                  <div class="card-body">
                    <p class="text-center">
                      Could not find the book you were looking for?
                    </p>
                    <p class="text-center mb=2">
                      Fill in the below details and we will get back to you as
                      soon as possible.
                    </p>
                    <form
                      id="requestBook"
                      class="user"
                      action="/users/request"
                      method="POST"
                    >
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control form-control-user"
                          id="bookname"
                          placeholder="Book Name"
                          name="bookname"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control form-control-user"
                          placeholder="Year of Publication"
                          name="pub"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control form-control-user"
                          placeholder="Author"
                          name="nameofauth"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <select
                          class="form-control selectpicker"
                          name="edition"
                          required
                        >
                          <optgroup label="Editions">
                            <option selected hidden disabled>Edition</option>
                            <option value="First Edition">First Edition</option>
                            <option value="Second Edition"
                              >Second Edition</option
                            >
                            <option value="Third Edition">Third Edition</option>
                            <option value="Fourth Edition"
                              >Fourth Edition</option
                            >
                            <option value="Fifth Edition">Fifth Edition</option>
                            <option value="Sixth Edition">Sixth Edition</option>
                            <option value="Seventh Edition"
                              >Seventh Edition</option
                            >
                            <option value="Eighth Edition"
                              >Eighth Edition</option
                            >
                            <option value="Ninth Edition">Ninth Edition</option>
                            <option value="Tenth Edition">Tenth Edition</option>
                          </optgroup>
                        </select>
                      </div>

                      <div class="text-center">
                        <input
                          type="submit"
                          class="btn btn-primary btn-user"
                          value="Request"
                        />
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- About Us -->
              <div class="col-md-6 mb-4">
                <div id="about" class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">About Us</h6>
                  </div>
                  <div class="card-body">
                    <p class="text-justify">
                      Online Textbooks is a website where students and teachers
                      can find relative study materials online such as textbooks
                      and reference books instead of owning a physical copy. The
                      web application consists of a repository of textbooks in a
                      digital format relative to the student’s field of study.
                      It eliminates the need for physical textbooks and
                      materials not being available to the students of a
                      particular class.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!--Contact-->
            <div class="row">
              <div class="col-lg-12 mb-4">
                <div id="contactus" class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Contact</h6>
                  </div>
                  <div class="card-body">
                    <h4 class="font-weight-bold text-center">
                      We'd love to hear from you
                    </h4>
                    <p class="text-center">
                      Our team is happy to answer your questions. Fill out the
                      form below and we'll get in touch with you as soon as
                      possible
                    </p>
                    <form
                      id="contactForm"
                      class="user mb-4"
                      action="/users/contact"
                      method="POST"
                    >
                      <div class="form-group">
                        <input
                          name="contactname"
                          type="text"
                          class="form-control form-control-user"
                          placeholder="Name"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <input
                          name="contactmail"
                          type="email"
                          class="form-control form-control-user"
                          placeholder="Email"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <input
                          name="contactsubject"
                          type="text"
                          class="form-control form-control-user"
                          placeholder="Subject"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <textarea
                          name="contactmessage"
                          id="text"
                          class="form-control"
                          rows="10"
                          placeholder="Message"
                          required
                        ></textarea>
                      </div>
                      <div class="text-center">
                        <input
                          type="submit"
                          class="btn btn-primary btn-user"
                          value="Send"
                        />
                      </div>
                      <div id="loadingsvg">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          xmlns:xlink="http://www.w3.org/1999/xlink"
                          style="
                            margin: auto;
                            display: block;
                            shape-rendering: auto;
                          "
                          width="150"
                          height="150"
                          viewBox="0 0 100 100"
                          preserveAspectRatio="xMidYMid"
                        >
                          <circle cx="40.6582" cy="50" fill="#f6f6f6" r="20">
                            <animate
                              attributeName="cx"
                              repeatCount="indefinite"
                              dur="1s"
                              keyTimes="0;0.5;1"
                              values="30;70;30"
                              begin="-0.5s"
                            ></animate>
                          </circle>
                          <circle cx="59.3418" cy="50" fill="#3ba4f6" r="20">
                            <animate
                              attributeName="cx"
                              repeatCount="indefinite"
                              dur="1s"
                              keyTimes="0;0.5;1"
                              values="30;70;30"
                              begin="0s"
                            ></animate>
                          </circle>
                          <circle cx="40.6582" cy="50" fill="#f6f6f6" r="20">
                            <animate
                              attributeName="cx"
                              repeatCount="indefinite"
                              dur="1s"
                              keyTimes="0;0.5;1"
                              values="30;70;30"
                              begin="-0.5s"
                            ></animate>
                            <animate
                              attributeName="fill-opacity"
                              values="0;0;1;1"
                              calcMode="discrete"
                              keyTimes="0;0.499;0.5;1"
                              dur="1s"
                              repeatCount="indefinite"
                            ></animate>
                          </circle>
                          <!-- [ldio] generated by https://loading.io/ -->
                        </svg>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright &copy; Online Textbooks 2020</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">Select the option below to logout.</div>
          <div class="modal-footer">
            <button
              class="btn btn-secondary modal-user"
              type="button"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <a class="btn btn-primary modal-user" href="/users/logout"
              >Logout</a
            >
          </div>
        </div>
      </div>
    </div>
    <!-- Book Request failure Modal-->
    <div
      class="modal fade"
      id="failureModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Book Request</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">Could not send Book Request. Try Again!</div>
          <div class="modal-footer">
            <button
              class="btn btn-primary modal-user"
              type="button"
              data-dismiss="modal"
            >
              Ok
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Book Success success Modal-->
    <div
      class="modal fade"
      id="SuccessModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Book Request</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            Book Request has been sent. We will notify once uploaded.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-primary modal-user"
              type="button"
              data-dismiss="modal"
            >
              Ok
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact failure Modal-->
    <div
      class="modal fade"
      id="contactfailureModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            Hi! Sorry We could not send your message. Please try again later or
            contact your administrator in some other way.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-primary modal-user"
              type="button"
              data-dismiss="modal"
            >
              Ok
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Contact Success Modal-->
    <div
      class="modal fade"
      id="contactSuccessModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            Hi! Your message was sent successfully. Thank you.
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-primary modal-user"
              type="button"
              data-dismiss="modal"
            >
              Ok
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/public/vendor/jquery/jquery.min.js"></script>
    <script src="/public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!--Bootstrap-select cdn-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/public/js/online-textbooks.js"></script>
  </body>
</html>
